@{    
    Layout = null;
}

<div class="content-heading">
       

        <div class="row">
            <div class="col-xs-9 text-center">
                {{vm.lista.nomeLista}}
            </div>
            <div class="col-xs-3">
                <a search-open="">
                    <em class="icon-magnifier"></em>
                </a>
            </div>
        </div>

</div>

<div class="panel panel-default">
    <div class="panel-body">
        <div ng-if="vm.nomes.length > 0" class="table-responsive">
            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th class="text-center">Nome</th>
                        <th class="text-center">Gênero</th>
                        <th class="text-center">Valor Entrada</th>
                        <th class="text-center">Valor Consuma.</th>
                        <th class="text-center">Presença</th>
                    </tr>
                </thead>
                <tbody>
                    <tr ng-repeat="nome in vm.nomes | filter:vm.pesquisa" >
                        <td class="text-center">{{ nome.nome }}</td>
                        <td class="text-center">
                            <span ng-if="nome.masculino">
                                <i class="fa fa-male masc"></i>
                            </span>
                            <span ng-if="!nome.masculino">
                                <i class="fa fa-female fem"></i>
                            </span>
                        </td>
                        <td class="text-center">
                            {{nome.precoEntrada | currency}}
                        </td>
                        <td class="text-center">
                            {{nome.valorConsuma| currency}}
                        </td>
                        <td class="text-center">
                            <span ng-if="nome.presencaConf">
                                <button class="btn btn-primary">Confirmado <i class="fa fa-thumbs-up"></i></button>
                            </span>
                            <span ng-if="!nome.presencaConf">
                                <button class="btn btn-danger" ng-click="vm.confPresenca(nome)">
                                    Confirmar <i class="fa fa-check"></i>
                                </button>
                            </span>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>

        <div class="cadastro-vazio" ng-if="vm.perfis.length == 0">
            <span class="cara-triste">):</span>
            <span class="texto-vazio">Ainda não foram adicionados nomes nessa Lista</span>
        </div>
    </div>
</div>
